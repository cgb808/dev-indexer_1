{
  "tool_director_config": {
    "coordination_strategy": "centralized_dispatch",
    "tool_sharing": {
      "cross_domain_enabled": true,
      "resource_pooling": true,
      "conflict_resolution": "priority_based"
    },
    "tool_lifecycle": {
      "initialization_timeout_ms": 3000,
      "health_check_interval_ms": 10000,
      "cleanup_on_idle_minutes": 30
    }
  },
  "tool_categories": {
    "mathematical": {
      "tools": [
        {
          "name": "calculator",
          "type": "computational",
          "resource_requirements": "low",
          "concurrent_users": 50,
          "domains": ["mathematics", "science"]
        },
        {
          "name": "graphing",
          "type": "visualization",
          "resource_requirements": "medium", 
          "concurrent_users": 20,
          "domains": ["mathematics", "science"]
        },
        {
          "name": "latex_renderer",
          "type": "formatting",
          "resource_requirements": "low",
          "concurrent_users": 30,
          "domains": ["mathematics", "science"]
        },
        {
          "name": "equation_solver",
          "type": "computational",
          "resource_requirements": "medium",
          "concurrent_users": 25,
          "domains": ["mathematics"]
        }
      ]
    },
    "visual": {
      "tools": [
        {
          "name": "image_analyzer",
          "type": "analysis",
          "resource_requirements": "high",
          "concurrent_users": 10,
          "domains": ["art", "science"]
        },
        {
          "name": "color_palette",
          "type": "utility",
          "resource_requirements": "low",
          "concurrent_users": 40,
          "domains": ["art"]
        }
      ]
    },
    "search": {
      "tools": [
        {
          "name": "literature_database",
          "type": "database",
          "resource_requirements": "medium",
          "concurrent_users": 30,
          "domains": ["english", "history"]
        },
        {
          "name": "primary_source_analyzer", 
          "type": "analysis",
          "resource_requirements": "medium",
          "concurrent_users": 15,
          "domains": ["history"]
        }
      ]
    },
    "audio": {
      "tools": [
        {
          "name": "pronunciation_guide",
          "type": "audio_processing",
          "resource_requirements": "medium",
          "concurrent_users": 20,
          "domains": ["foreign_language"]
        },
        {
          "name": "music_notation",
          "type": "notation",
          "resource_requirements": "low",
          "concurrent_users": 25,
          "domains": ["art"]
        }
      ]
    },
    "workflow": {
      "tools": [
        {
          "name": "writing_assistant",
          "type": "assistance",
          "resource_requirements": "medium", 
          "concurrent_users": 35,
          "domains": ["english"]
        },
        {
          "name": "lab_guide",
          "type": "guidance",
          "resource_requirements": "low",
          "concurrent_users": 40,
          "domains": ["science"]
        }
      ]
    }
  },
  "resource_management": {
    "allocation_strategy": "demand_based",
    "priority_levels": {
      "high": ["mathematical", "audio"],
      "medium": ["visual", "search"],
      "low": ["workflow"]
    },
    "scaling": {
      "auto_scale": true,
      "scale_up_threshold": 0.8,
      "scale_down_threshold": 0.3,
      "cooldown_period_minutes": 5
    }
  },
  "monitoring": {
    "track_tool_usage": true,
    "track_performance_metrics": true,
    "alert_on_failures": true,
    "usage_analytics": {
      "enabled": true,
      "retention_days": 30,
      "aggregation_intervals": ["5m", "1h", "1d"]
    }
  }
}
